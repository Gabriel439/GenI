  n5[cat:sp idx:?Z det:plus]![]
  { n6[cat:prep]![]
    {
      n7 type:lex "a"
    }
    n8 type:subst [cat:n idx:?Z det:plus qu:minus]![cat:n idx:?Z] 
  }
  n9[cat:p]![]
  {n10[cat:prep]![]
    {
      n11 type:lex "de"
    } 
    n12 type:subst [cat:p idx:?Y mode:inf sujidx:?Z]![cat:p idx:?Y]
  }
}

  %15 declarative gn0 persuade gn2 pinf_de1	n0vn2pinf1 
