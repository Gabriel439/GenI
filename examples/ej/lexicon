%% The LEXICON
%%
%% 
%% Nouns
%%   common nouns
%%     (hat, man, rabbit, woman)
%%   proper names
%%     (mia, vincent)
%% Verbs
%%   intransitive verbs
%%     (runs, sleeps)
%%   transitive verbs
%%     (loves, removes)
%% Modifiers
%%   adjectives
%%     (big, tall, white)
%%   adverbs
%%     (fast)
%% Determiners
%%   (a, the)


%% Nouns
%% common nouns

hat    Cn
man    Cn
rabbit Cn
woman  Cn

%% proper names

mia     Pn
vincent Pn

%% Verbs
%% intransitive verbs

runs   vArity1
sleeps vArity1 

%% transitive verbs

loves   vArity2 
removes vArity3 

%% Modifiers
%% adjectives

big  Adj
tall Adj

%bigtall Adj(Entity)
%semantics:[big(_ Entity) tall(_ Entity)]

white Adj

%% adverbs

fast Adv

%% Determiners

%a Dp
the Dp
