%% 
%% Nouns
%%   common nouns
%%     (hat, man, rabbit, woman)
%%   proper names
%%     (mia, vincent)
%% Verbs
%%   intransitive verbs
%%     (runs, sleeps)
%%   transitive verbs
%%     (loves, removes)
%% Modifiers
%%   adjectives
%%     (big, tall, white)
%%   adverbs
%%     (fast)
%% Determiners
%%   (a, the)


%% Nouns
%% common nouns

hat    n Cn
man    n Cn
rabbit n Cn
woman  n Cn

%% proper names

mia     n Pn
vincent n Pn
vincent n Pn2

%% Verbs
%% intransitive verbs

runs   v vArity1
sleeps v vArity1 

%% transitive verbs

loves   v vArity2 
removes v vArity3 

%% Modifiers
%% adjectives

big  adj Adj
tall adj Adj

%bigtall adj Adj

white adj Adj

%% adverbs

fast adv Adv

%% Determiners

%a Dp
the det Dp
