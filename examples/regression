GENI_CMD=bin/geni
GENI_FLAGS="--nogui -b cky"

do_geni() {
  echo "${GENI_CMD} $*"
  ${GENI_CMD} $*
}

do_geni ${GENI_FLAGS} -m examples/ej/mac -l examples/ej/lexicon -s examples/ej/suite
do_geni ${GENI_FLAGS} -m examples/chatnoir/mac -l examples/chatnoir/lexicon -s examples/chatnoir/sem --rootcats=p

DEMO_FLAGS="-m examples/demo/demomac -l examples/demo/demolex -s examples/demo/suite --rootcats=p"
do_geni ${GENI_FLAGS} ${DEMO_FLAGS} 
do_geni ${GENI_FLAGS} ${DEMO_FLAGS} --testcase=promettre_donner

PROMETTRE_FLAGS="-m examples/promettre/macros -l examples/promettre/lexicon -s examples/promettre/testsuite --rootcats=p --opts=pol"
do_geni ${GENI_FLAGS} ${PROMETTRE_FLAGS}

