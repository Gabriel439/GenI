%%
%% The LEXICON
%%
%% 
%% Nouns
%%   common nouns
%%     (hat, man, rabbit, woman)
%%   proper names
%%     (mia, vincent)
%% Verbs
%%   intransitive verbs
%%     (runs, sleeps)
%%   transitive verbs
%%     (loves, removes)
%% Modifiers
%%   adjectives
%%     (big, tall, white)
%%   adverbs
%%     (fast)
%% Determiners
%%   (a, the)


%% Nouns
%% common nouns

hat Cn(Entity ! agr:sg3) 
semantics:[hat(_ Entity)]
goal:[_(Entity)]

man Cn(Entity ! agr:sg3)
semantics:[man(_ Entity)]
goal:[_(Entity)]

rabbit Cn(Entity ! agr:sg3)
semantics:[rabbit(_ Entity)]
goal:[_(Entity)]

woman Cn(Entity ! agr:sg3)
semantics:[woman(_ Entity)]
goal:[_(Entity)]


%% proper names

mia Pn(Entity ! agr:sg3)
semantics:[name(_ Entity mia)]
goal:[_(Entity)]

vincent Pn(Entity ! agr:sg3)
semantics:[name(_ Entity vincent)]
goal:[_(Entity)]

%% Verbs
%% intransitive verbs

runs IntrV(Event Agent ! agr:sg3)
semantics:[run(Event Agent)]
goal:[_(Event)]

sleeps IntrV(Event Agent ! agr:sg3)
semantics:[sleep(Event Agent)]
goal:[_(Event)]

%% transitive verbs

loves TrV(Event Agent Experiencer ! agr:sg3)
semantics:[love(Event Agent Experiencer)]
goal:[_(Event)]

removes TrVPP(Event Agent Theme Loc ! agr:sg3)
semantics:[remove(Event Agent Theme Loc)]
goal:[_(Event)]


%% Modifiers
%% adjectives

big Adj(Entity)
semantics:[big(_ Entity)]
goal:[_(Entity)]

tall Adj(Entity)
semantics:[tall(_ Entity)]
goal:[_(Entity)]

white Adj(Entity)
semantics:[white(_ Entity)]
goal:[_(Entity)]


%% adverbs

fast Adv(Event)
semantics:[fast(_ Event)]
goal:[_(Event)]


%% Determiners

a Dp(Entity ! agr:sg3)
goal:[describe(Entity)]


the Dp(Entity)
goal:[identify(Entity)]
 