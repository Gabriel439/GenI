%% Nouns
%% common nouns

hamburger (Entity) 
semantics:[hamburger(Entity)]

homme (Entity)
semantics:[man(Entity)]

lapin (Entity)
semantics:[rabbit(Entity)]

femme (Entity)
semantics:[woman(Entity)]


%% proper names

jacques (Entity)
semantics:[name(Entity jacques)]

emma (Entity)
semantics:[name(Entity emma)]

%% Verbs
%% intransitive verbs

%runs binaryPredicates(Event Agent )
%semantics:[run(Event Agent)]
%
%sleeps binaryPredicates(Event Agent )
%semantics:[sleep(Event Agent)]
%
%% transitive verbs

aimer (Agent Experiencer )
semantics:[love(Agent Experiencer)]

%removes TrVPP(Event Agent Theme Loc )
%semantics:[remove(Event Agent Theme Loc)]

