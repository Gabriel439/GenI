% ----------------------------------------------------------------------
% bits and pieces
% ----------------------------------------------------------------------

% this seems wrong
notre det [idx:X]
semantics:[poss(X us)]

le det [idx:X]
semantics:[def(X)]

un det [idx:X]
semantics:[indef(X)]

ce det [idx:X]
semantics:[dem(X)]

%ce cl [idx:X]
%semantics:[]


% ----------------------------------------------------------------------
% nouns
% ----------------------------------------------------------------------

directeur n [idx:X]
semantics:[directeur(X)]

bureau n  [idx:X]
semantics:[bureau(X)]

consultant n [idx:X]
semantics:[consultant(X)]

allemagne pn [idx:X] % co-anchors would be useful for this word
semantics:[allemagne(X)]

seminaire n [idx:X]
semantics:[seminaire(X)]

equipe n [idx:X]
semantics:[equipe(X)]

% ----------------------------------------------------------------------
% adjectives 
% ----------------------------------------------------------------------

special adj [idx:X]  
semantics:[special(X)]

hebdomadaire adj [idx:X]
semantics:[hebdomadaire(X)]

nouveau adj [idx:X]
semantics:[nouveau(X)]

dequipe adj [idx:X]
semantics:[dequipe(X)]


% ----------------------------------------------------------------------
% prepositions 
% ----------------------------------------------------------------------

% FIXME: what should be set to X ?

de prep [idx:X idx2:Y] 
semantics:[de(X Y)]

% ----------------------------------------------------------------------
% verbs 
% ----------------------------------------------------------------------

auditionne v [evt:X arg1:X arg2:Y] 
semantics:[auditioner(I X Y)]

organise v [evt:X arg1:X arg2:Y] 
semantics:[organiser(I X Y)]

